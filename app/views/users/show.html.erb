
<%= render 'lefthand_column', user: @user, book: @book %>

		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<thead>
				  <tr>
					<th></th>
					<th>Title</th>
					<th>Opnion</th>
				  </tr>
				</thead>
				<% @books.each do |book| %>
				<tbody>
				  <tr>
					<td><%= link_to user_path(current_user[:id]) do %>
						<%= attachment_image_tag book.user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %></td>
					<td><%= link_to book.title, book_path(book.id) %></td>
					<td><%= book.body %></td>
					<% end %>
				  </tr>
				</tbody>
				<% end %>
			</table>
		</div>

	</div>
</div>

