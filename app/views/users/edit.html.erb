	      	<% end %>
	      </ul>
	    </div>
	  <% end %>

	  <div class="form_group">
	    <label for=name_field>Name</label>
	      <%= f.text_field :name, autofocus: true %>
	  </div>
	  <div class="form-group">
	    <label for=image_field>Image</label>
	    ã€€<%= f.attachment_field :profile_image %>
	  </div>
