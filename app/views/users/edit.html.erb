
<div class="container">
	<h2>User info</h2>
	<%= form_for(@user) do |f| %>

	  <% if @user.errors.any? %>
	    <div id="error_explanation">
	      <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
	      <ul>
	      	<% @user.errors.full_messages.each do |message| %>
